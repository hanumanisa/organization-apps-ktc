<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cpbackround"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AwardingAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Favorite Lecturer -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp"
            android:padding="16dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/favorite_lecturer_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorite Lecturer"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/favorite_lecturer_votes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Votes: "
                    android:paddingTop="8dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Most Achievable Student -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp"
            android:padding="16dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/most_achievable_student_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Most Achievable Student"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/most_achievable_student_votes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Votes: "
                    android:paddingBottom="2dp"
                    android:paddingTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Most Favorite Project -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp"
            android:padding="16dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/most_favorite_project_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Most Favorite Project"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/most_favorite_project_votes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Votes: "
                    android:paddingBottom="2dp"
                    android:paddingTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
