<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cpbackround"
    tools:context=".CompetititonCompsphere">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/category1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Competition"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!-- Kompetisi 1: ERP Simulation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/navibackround"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/competition_erp"
                    android:layout_width="120dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/erp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/comp_erp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ERP SIMULATION"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description_erp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ERP Simulation Competition is a team competition to manage a virtual business using an ERP system, with a focus on strategic decision making to maximize profits." />

                    <Button
                        android:id="@+id/btnregiserp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_backround"
                        android:text="REGISTER"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Kompetisi 2: Programming Rush -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/navibackround"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/competition_prog"
                    android:layout_width="120dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/progrush" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/comp_prog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROGRAMMING RUSH"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description_prog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Programming Rush is a fast-paced programming competition where participants complete various coding challenges in a limited time, testing their speed, logic, and creativity." />

                    <Button
                        android:id="@+id/btnregisprog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_backround"
                        android:text="REGISTER"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Kompetisi 3: UI/UX Design -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/navibackround"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/competition_uiux"
                    android:layout_width="120dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uiux" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/comp_uiux"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UI/UX DESIGN"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description_uiux"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UI/UX Design is a competition to design creative and functional user interfaces and experiences, prioritizing aesthetics and user comfort." />

                    <Button
                        android:id="@+id/btnregisuiux"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_backround"
                        android:text="REGISTER"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>